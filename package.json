{
  "name": "mw-category",
  "version": "1.2.1",
  "description": "Retrieve category items from a mediawiki-compatible source",
  "main": "index.js",
  "scripts": {
    "test": "mocha",
    "lint": "eslint index.js cli.js example.js lib/*.js test/*.js",
    "jsdoc": "jsdoc index.js lib/* -d docs",
    "update-docs": "npm run jsdoc && git add docs* && git commit -m \"docs: updated jsdoc\""
  },
  "bin": {
    "mw-category": "cli.js"
  },
  "keywords": [
    "mediawiki",
    "wiktionary",
    "wikipedia",
    "categories"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm test",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --max-warnings 0"
  },
  "author": "Alexander Noack <eisverticker@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/eisverticker/mw-category.git"
  },
  "dependencies": {
    "commander": "^6.1.0",
    "got": "^11.7.0",
    "mustache": "^4.0.1",
    "url-assembler": "^2.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "chai": "^4.1.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.11.0",
    "husky": "^4.3.0",
    "jsdoc": "^3.5.3",
    "lint-staged": "^10.4.2",
    "mocha": "^8.2.0"
  }
}
