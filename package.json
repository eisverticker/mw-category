{
  "name": "mw-category",
  "version": "1.2.2",
  "description": "Retrieve category items from a mediawiki-compatible source",
  "main": "index.js",
  "scripts": {
    "test": "mocha",
    "lint": "eslint index.js cli.js example.js lib/*.js test/*.js --max-warnings 0",
    "lint:fix": "eslint index.js cli.js example.js lib/*.js test/*.js --fix --max-warnings 0",
    "jsdoc": "jsdoc index.js lib/* -d docs",
    "update-docs": "npm run jsdoc && git add docs* && git commit -m \"docs: updated jsdoc\"",
    "release": "standard-version",
    "release:patch": "standard-version --release-as patch",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major"
  },
  "bin": {
    "mw-category": "cli.js"
  },
  "keywords": [
    "mediawiki",
    "wiktionary",
    "wikipedia",
    "categories"
  ],
  "author": "Alexander Noack <eisverticker@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/eisverticker/mw-category.git"
  },
  "bugs": {
    "url": "https://github.com/eisverticker/mw-category/issues"
  },
  "dependencies": {
    "commander": "^9.2.0",
    "got": "^11.7.0",
    "mustache": "^4.0.1",
    "url-assembler": "^2.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "chai": "^4.1.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.14.0",
    "eslint-config-google": "^0.14.0",
    "husky": "^4.3.0",
    "jsdoc": "^3.5.3",
    "lint-staged": "^10.4.2",
    "mocha": "^8.2.0",
    "standard-version": "^9.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm test",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --max-warnings 0"
  },
  "standard-version": {
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Bug Fixes"
      },
      {
        "type": "chore",
        "hidden": true
      },
      {
        "type": "docs",
        "hidden": true
      },
      {
        "type": "style",
        "hidden": true
      },
      {
        "type": "refactor",
        "hidden": true
      },
      {
        "type": "perf",
        "hidden": true
      },
      {
        "type": "test",
        "hidden": true
      }
    ]
  }
}
