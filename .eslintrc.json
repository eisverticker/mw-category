{
    "env": {
        "node": true,
        "mocha": true,
        "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "extends": ["eslint:recommended", "google"],
    "rules": {
        "object-curly-spacing": ["error", "always"],
        "require-await": "error",
        "no-console": "warn",
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": ["warn", "never"],
        "max-len": ["warn", 100],
        "valid-jsdoc": [2, {
          "requireParamDescription": false,
          "requireReturnDescription": false,
          "requireReturn": false,
          "prefer": {"returns": "return"}
        }],
        "require-jsdoc": [2, {
          "require": {
            "FunctionDeclaration": true,
            "MethodDefinition": true,
            "ClassDeclaration": true
          }
        }],
        "comma-dangle": ["warn", "only-multiline"]
    }
}
